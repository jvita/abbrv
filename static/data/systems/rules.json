[
    {
        "name": "Remove consecutive duplicates",
        "regex": "(.)\\1+",
        "replacement": "$1"
    },
    {
        "name": "Omit \"t\" in \"tch\"",
        "regex": "tch",
        "replacement": "ch"
    },
    {
        "name": "Omit \"a\" and \"o\" before \"m\" and \"n\"",
        "regex": "(?<!\\b)([ao])(?=[mn])",
        "replacement": ""
    },
    {
        "name": "Omit \"e\" in \"-ed\" for > 5 char words",
        "regex": "\\b(\\w{4,})ed\\b",
        "replacement": "$1d"
    }
]